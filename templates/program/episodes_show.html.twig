{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            
         <h2>   
         <p>Saison : {{ season.number }} </p>
            </h2>
            
            <h3>
            <p>Episode : {{ episode.number }} - {{ episode.title }}
            <p>Sommaire : {{ episode.synopsis}}
                </h3>
                {# Lien vers la fiche de la saison : #}
				<a href="/program/{{ program.id }}/season/{{ season.id }}/episode/{{ episode.id }}"></a>
        
        
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}
