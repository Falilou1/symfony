{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>Sommaire : {{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            
            <p>Saisons : {% for season in seasons %}
            
         <p>Saison : {{ season.number }} - {{ season.year }}</p>
         {# Lien vers la fiche de la saison : #}
				<a href="/program/{{ program.id }}/season/{{ season.id }}">Voir la fiche</a>
            {% endfor %}
        </div>
    </div>


    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
    <p>Acteurs :</p>
<ul>
    {% for actor in program.actors %}
        <li>{{ actor.name }} </li>
    {% else %}
        <li>Aucun acteur pour cette série</li>
    {% endfor %}
</ul>
{% endblock %}
