{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>Sommaire : {{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
         <h2>   
             
        
         <p>Saison : {{ season.number }} - {{ season.year }}</p>
         
            </h2>
            <h3>
            
            <p>Liste des Épisodes : {% for episode in episodes %} </p>
       <a href="{{ path("program_episodes_show", {"program_Id": program.id, "season_Id": season.id, "episode_Id": episode.id})}}">{{ episode.number}} - {{episode.title}}</a>
       
        {% else %}
        Épisodes indisponible pour cette saison
         {% endfor %}</h3>
                
    
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}
