{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les categories de la table program : </h1>
   
        <div>
            <h2> Catégorie : {{ category.name }} </h2>
    {% for program in programs %}
        {{ loop.index }} 
        / {{ program.title }}
        
            <p>{{ program.summary }}</p>
    {# Lien vers la fiche de la série : #}
					<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
				</div>
			{% else %}
				Aucune série trouvée.
			{% endfor %}
		</div>
	</div>
        <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
    
    {% endblock %}